<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="trj_routing_control.admin" pattern="/">
        <default key="_controller">TRJRoutingControlBundle:Admin:index</default>
    </route>
    <route id="trj_routing_control.route_list" pattern="/route/list">
        <default key="_controller">TRJRoutingControlBundle:Route:list</default>
    </route>
    <route id="trj_routing_control.control_new" pattern="/route/control/{name}/new">
        <default key="_controller">TRJRoutingControlBundle:Control:new</default>
    </route>
    <route id="trj_routing_control.control_show" pattern="/route/control/{name}/show">
        <default key="_controller">TRJRoutingControlBundle:Control:show</default>
    </route>
</routes>